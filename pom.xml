<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>es.sandbox.ui.messages</groupId>
	<artifactId>flash-messages</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>${project.groupId}:${project.artifactId}</name>
	<description>A simple way to send &#038; show flash messages</description>
	<url>https://github.com/jeslopalo/flash-messages</url>
	<inceptionYear>2013</inceptionYear>

	<licenses>
		<license>
			<name>The MIT License</name>
			<url>http://www.opensource.org/licenses/mit-license.php</url>
			<distribution>repo</distribution>
			<comments>It would be awesome to know that you're using it!</comments>
		</license>
	</licenses>

	<organization>
		<name>Jesús López Alonso [@jeslopalo]</name>
		<url>\\sandbox.es</url>
	</organization>

	<developers>
		<developer>
			<id>jeslopalo</id>
			<name>Jesús López</name>
			<email>jeslopalo at sandbox dot es</email>
			<roles>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
			<url>https://github.com/jeslopalo</url>
		</developer>
	</developers>

	<properties>
		<maven.deploy.skip>true</maven.deploy.skip>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
		<java.version>1.6</java.version>
	</properties>

	<modules>
		<module>flash-messages-bom</module>
		<module>flash-messages-parent</module>
		<module>flash-messages-core</module>
		<module>flash-messages-taglibs</module>
		<module>flash-messages-spring</module>
	</modules>

	<profiles>
		<profile>
			<id>include-showcase</id>
			<modules>
				<module>flash-messages-showcase</module>
			</modules>
		</profile>
	</profiles>

	<build>
		<plugins>
			<!-- Cobertura -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<format>xml</format>
					<maxmem>256m</maxmem>
					<!-- aggregated reports for multi-module projects -->
					<aggregate>true</aggregate>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.eluder.coveralls</groupId>
				<artifactId>coveralls-maven-plugin</artifactId>
				<version>2.2.0</version>
				<configuration>
					<coberturaFile>flash-messages-parent/target/site/cobertura/coverage.xml</coberturaFile>
					<coverageFile>flash-messages-parent/target/site/cobertura/coverage.xml</coverageFile>
					<coverallsFile>flash-messages-parent/target/coveralls.json</coverallsFile>
					<serviceName>travis-ci</serviceName>
					<!-- If used as a standalone maven build or with any continuous integration 
						server other than Travis CI -->
					<!-- <repoToken>yourcoverallsprojectrepositorytoken</repoToken> -->
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
